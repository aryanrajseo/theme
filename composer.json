{
  "name": "blockify/theme",
  "description": "Blockify Theme for WordPress",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Blockify",
      "email": "info@blockify.com"
    }
  ],
  "type": "wordpress-theme",
  "scripts": {
    "install:dev": "rm -Rf ./composer.lock && composer install",
    "install:prod": "rm -Rf ./composer.lock && composer install --no-dev",
    "install-codestandards": "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run",
    "phpcs": "phpcs",
    "pest": "vendor/bin/pest"
  },
  "minimum-stability": "dev",
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "composer/installers": true,
      "pestphp/pest-plugin": true
    }
  },
  "require": {
    "wptt/webfont-loader": "dev-master"
  },
  "require-dev": {
    "dingo-d/wp-pest-integration-test-setup": "dev-main",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "szepeviktor/phpstan-wordpress": "^1.1",
    "wp-coding-standards/wpcs": "^2.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7"
  }
}
