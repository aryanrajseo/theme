{
  "name": "blockify/theme",
  "description": "Blockify Theme for WordPress",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Blockify",
      "email": "info@blockify.com"
    }
  ],
  "type": "wordpress-theme",
  "scripts": {
    "install:dev": "@composer update",
    "install:prod": "@composer update --no-dev",
    "install-codestandards": "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run",
    "phpcs": "vendor/bin/phpcs functions.php includes --standard=./phpcs.xml -p -s",
    "phpstan": "vendor/bin/phpstan analyse includes functions.php",
    "pest": "pest"
  },
  "minimum-stability": "dev",
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "pestphp/pest-plugin": true
    }
  },
  "require": {
    "php": "^7.4 || ^8.0"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "friendsofphp/php-cs-fixer": "dev-master",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "szepeviktor/phpstan-wordpress": "^1.1",
    "wp-coding-standards/wpcs": "^2.3",
    "composer/installers": "^1.5 || ^2.0",
    "dingo-d/wp-pest-integration-test-setup": "dev-main",
    "szepeviktor/phpcs-psr-12-neutron-hybrid-ruleset": "dev-master"
  }
}
