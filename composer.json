{
  "name": "blockify/theme",
  "description": "Blockify Theme for WordPress",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Blockify",
      "email": "info@blockify.com"
    }
  ],
  "type": "wordpress-theme",
  "scripts": {
    "install:dev": "@composer update",
    "install:prod": "@composer update --no-dev",
    "install:cs": "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run",
    "phpcs": "phpcs -s",
    "phpcbf": "phpcbf",
    "phpstan": "phpstan",
    "pest": "pest"
  },
  "minimum-stability": "dev",
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "pestphp/pest-plugin": true
    }
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "tgm/plugin-activation",
        "version": "2.6.1",
        "source": {
          "url": "https://github.com/TGMPA/TGM-Plugin-Activation.git",
          "type": "git",
          "reference": "master"
        }
      }
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "tgmpa/tgm-plugin-activation": "dev-develop",
    "wptrt/admin-notices": "dev-master"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "szepeviktor/phpstan-wordpress": "^1.1",
    "wp-coding-standards/wpcs": "^2.3",
    "composer/installers": "^1.5 || ^2.0",
    "dingo-d/wp-pest-integration-test-setup": "dev-main",
    "szepeviktor/phpcs-psr-12-neutron-hybrid-ruleset": "dev-master"
  }
}
